@model IEnumerable<ECoffee.Data.Models.Recipe>

@{
    ViewBag.Title = "Boissons Chaudes";
}

<h2>Boissons Chaudes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Commander", "Order", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
